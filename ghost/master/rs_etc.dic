savedatacheck{
	_dummy = FOPEN("%_argv[0]","r")
	if _dummy == 1{
		dataplace = _argv[0]
		EVAL("savedatacheck_%(_argv[1])")
	}else{
		FCLOSE("%_argv[0]")
	}
}

savedatacheck_Ainsel{
	while 1{
		if (_line = FREAD("%(dataplace)")) == -1{
			record = "master"
			break
		}else{
			if "k-mode" _in_ CUTSPACE(_line){
				record = "k-mode"
				break
			}elseif "m-mode" _in_ CUTSPACE(_line){
				record = "m-mode"
				break
			}elseif "月はピアノに誘われて" _in_ CUTSPACE(_line){
				record = "月はピアノに誘われて"
				break
